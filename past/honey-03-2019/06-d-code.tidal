setcps (180/120/2)

let npat = "[0 2 4 6]/16"

hush

d1 
  $ move 
  $ every 9 (rev) 
  $ every 5 (# coarse (shift' 3 $ choose [4,6..18])) 
  $ every 8 (# accelerate "0.5 -0.5") 
