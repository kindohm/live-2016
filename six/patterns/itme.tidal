              slow (dis $ slow 8311 $ choose [1,(4/3),2,(8/3),4,(12/3)] ) $
                (|+| n (dis $ slow 37.1 $ choose [0,-12])) $ (|+| n "8") $ (|=| n "[0,-1]") $ n "0*16"
