                ctlNum imgtime # control (dis $ scale 0 127 $ shift' 5 $ rand),
                ctlNum imgspeed # control (dis $ scale 30 127 $ shift' 5 $ rand),
                ctlNum y # control (dis $ scale 10 110 $ shift' 5 $ rand),
                ctlNum z # control (dis $ scale 0 127 $ shift' 6 $ rand) ]
